# Development environment variables
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# WebRTC Configuration
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
RTC_MIN_PORT=2000
RTC_MAX_PORT=2020

# TURN Server
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=dmp
TURN_SERVER_PASSWORD=dmp-turn-secret-change-in-production

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# SKALE Network (Testnet)
SKALE_ENDPOINT=https://staging-v3.skalenodes.com/v1/staging-utter-unripe-menkar
SKALE_CHAIN_ID=344106930
SKALE_PRIVATE_KEY=your-private-key-here

# libp2p Bootstrap Nodes
LIBP2P_BOOTSTRAP_NODES=/ip4/127.0.0.1/tcp/4002/ws/p2p/QmLocalBootstrap

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_PORT=9091
METRICS_ENABLED=true

# Security
JWT_SECRET=change-this-in-production
ENCRYPTION_KEY=32-byte-hex-key-change-in-production

# Feature Flags
ENABLE_RECORDING=false
ENABLE_TRANSCRIPTION=false
MAX_PARTICIPANTS=8