{
  "name": "@dmp/server",
  "version": "0.1.0",
  "description": "Node.js coordination services for the decentralized meeting platform",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsc",
