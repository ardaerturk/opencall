{
  "name": "@opencall/server",
  "version": "0.1.0",
  "description": "Node.js coordination services for OpenCall",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist node_modules .turbo"
  },
  "dependencies": {
    "@opencall/core": "workspace:*",
    "fastify": "^5.4.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.1.0",
    "mediasoup": "^3.13.12",
    "libp2p": "^2.8.11",
    "@libp2p/webrtc": "^5.2.19",
    "@libp2p/websockets": "^9.2.16",
    "@libp2p/bootstrap": "^11.0.42",
    "@chainsafe/libp2p-noise": "^16.1.3",
    "@chainsafe/libp2p-yamux": "^7.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/ws": "^8.5.10",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.1",
    "nodemon": "^3.0.2"
  }
}