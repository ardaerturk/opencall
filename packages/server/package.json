    "@libp2p/websockets": "^8.0.12",
    "@libp2p/bootstrap": "^10.0.10",
    "@chainsafe/libp2p-noise": "^14.0.0",
    "@chainsafe/libp2p-yamux": "^6.0.1",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.0",
    "dotenv": "^16.3.1"
